<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap" type='text/css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type='text/css' />

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/client/css/vendor.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/client/css/app.css" asp-append-version="true" />
    </environment>
    <environment include="Staging,Production">
        <link rel="stylesheet" href="~/dist/client/css/style.css" asp-append-version="true" />
    </environment>

    <script>
        var virtualDir = '@Url.Content("~/")';
    </script>

    @await RenderSectionAsync("head", false)
</head>

<body>

    <!-- Site Header -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Site Footer -->

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
